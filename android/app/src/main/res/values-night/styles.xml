<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background">#23232B</color>
    <bool name="isLightBackgroundStatusBar">false</bool>

    <style name="AppTheme.Night.Base" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/background</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="colorPrimary">#6CD991</item>
        <item name="colorSecondary">#edf1f5</item>
        <item name="colorSurface">#4F4F5C</item>
        <item name="android:navigationBarColor">#B323232B</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Night.Base">
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/background</item>
        <item name="android:tint">?colorPrimary</item>
        <item name="iconTint">?colorSecondary</item>
    </style>

</resources>
